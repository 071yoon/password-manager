{
  "name": "local-password-manager",
  "productName": "Local Password Vault",
  "version": "1.0.3",
  "description": "Local-only password manager built with Electron and React",
  "private": true,
  "main": "out/main/index.js",
  "build": {
    "appId": "com.localpasswordvault.app",
    "executableName": "LocalPasswordVault",
    "directories": {
      "buildResources": "resources"
    },
    "icon": "resources/icon.png",
    "mac": {
      "icon": "resources/icon.png",
      "category": "public.app-category.productivity",
      "extendInfo": {
        "CFBundleName": "Local Password Vault",
        "CFBundleDisplayName": "Local Password Vault",
        "CFBundleExecutable": "LocalPasswordVault"
      }
    },
    "win": {
      "icon": "resources/icon.png"
    }
  },
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "package": "npm run build && electron-builder",
    "format": "prettier \"src/**/*.{ts,tsx,js,jsx,css,md}\" --write",
    "format:check": "prettier \"src/**/*.{ts,tsx,js,jsx,css,md}\" --check"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "es-hangul": "^2.0.0",
    "es-toolkit": "^1.39.0",
    "lucide-react": "^0.525.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^2.5.2",
    "transliteration": "^2.6.1"
  },
  "devDependencies": {
    "@types/node": "^22.8.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.8",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "electron": "^35.2.0",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.1.0",
    "postcss": "^8.4.47",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.7.2",
    "vite": "^6.0.0"
  }
}
